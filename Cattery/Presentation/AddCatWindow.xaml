<Window x:Class="Presentation.AddCatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AddCatWindow" Height="450" Width="800" Background="#2B2B2B">
    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Menu -->
            <RowDefinition Height="5" />
            <!-- Titolo -->
            <RowDefinition Height="*" />
            <!-- Corpo -->
        </Grid.RowDefinitions>

        <!-- Rettangolo Verde con Menu -->
        <Border Grid.Row="0" Background="#2ECC71" Padding="10"
         CornerRadius="0,0,6,6">
            <DockPanel>
                <Menu DockPanel.Dock="Top" Background="#27AE60" Foreground="Black" FontWeight="Bold">
                    <MenuItem Header="Cats">
                        <MenuItem Header="Add" />
                        <MenuItem Header="See All" />
                    </MenuItem>
                    <MenuItem Header="_Adoption">
                        <MenuItem Header="Adopt" />
                        <MenuItem Header="See All" />
                    </MenuItem>
                    <MenuItem Header="_Account">
                        <MenuItem Header="Guida" />
                        <MenuItem Header="Informazioni su..." />
                    </MenuItem>
                </Menu>
            </DockPanel>
        </Border>

        <Border Grid.Row="2" Padding="20" Background="#2B2B2B" CornerRadius="8">
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="400">

                    <!-- Stringa -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Name:" FontSize="18" Foreground="White" Margin="0,0,0,6" />
                        <TextBox x:Name="TxTBoxCatName"
             Height="30"
             FontSize="16"
             Background="#333"
             Foreground="White"
             BorderBrush="#555"
             Margin="0,0,0,15" Width="213" />
                    </StackPanel>

                    <!-- Booleano -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <CheckBox x:Name="IsMaleCheckBox" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBlock Text="IsMale" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Birthdate:" FontSize="18" Foreground="White" Margin="0,0,0,6" />
                        <DatePicker x:Name="DatePickerBirthdate"
                    Height="30"
                    FontSize="16"
                    Background="#333"
                    Foreground="Black"
                    BorderBrush="#555"
                    Margin="0,0,0,15" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Arrived in" FontSize="18" Foreground="White" Margin="0,0,0,6" />
                        <DatePicker x:Name="DatePickerArrivedIn"
                    Height="30"
                    FontSize="16"
                    Background="#333"
                    Foreground="Black"
                    BorderBrush="#555"
                    Margin="0,0,0,15" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Breed:" FontSize="18" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBox x:Name="TxTBoxBreed"
                 Height="30"
                 FontSize="16"
                 Background="#333"
                 Foreground="White"
                 BorderBrush="#555"
                 Width="200" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Description:" FontSize="18" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBox x:Name="TxTBoxDescription"
                 Height="30"
                 FontSize="16"
                 Background="#333"
                 Foreground="White"
                 BorderBrush="#555"
                 Width="200" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="50,0,0,0" VerticalAlignment="Top">
                    <!-- Pulsante -->
                    <Button x:Name="BtnRegisterCat" Content="Register"
                            Height="40"
                            Width="150"
                            FontSize="16"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            HorizontalAlignment="Left"
                            Cursor="Hand"
                            Margin="0,10,0,0"
                            Click="BtnAddCat_Click">
                    </Button>

                    <Button x:Name="BtnClearCat" Content="Clear"
                        Height="40"
                        Width="150"
                        FontSize="16"
                        Background="#C0392B"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Cursor="Hand"
                        Margin="0,10,0,0"
                        Click="BtnClearCat_Click">
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>